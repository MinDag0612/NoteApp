<div class="d-flex justify-content-between align-items-center mb-3" id="header">
    <h2 class="fw-bold text-secondary">Welcome, {{ name }}</h2>
    <div>
        <button class="btn btn-outline-primary me-2" id="toggleViewBtn">Switch View</button>
        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#userOptionsModal">Tùy chọn
            người dùng</button>
        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#share_note">ghi chú được chia sẽ</button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="userOptionsModal" tabindex="-1" aria-labelledby="userOptionsModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <form id="userSettingsForm">
                    <div class="mb-3">
                        <label for="fontSelect" class="form-label">Chọn font chữ</label>
                        <select id="fontSelect" class="form-select">
                            <option value="Arial">Arial</option>
                            <option value="Tahoma">Tahoma</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Courier New">Courier New</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="colorPicker" class="form-label">Màu nền ghi chú</label>
                        <input type="color" class="form-control form-control-color" id="colorPicker" value="#ffffff">
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                        <label class="form-check-label" for="darkModeSwitch">Chế độ tối</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="share_note" tabindex="-1" aria-labelledby="shareNoteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary" id="shareNoteModalLabel">Ghi chú được chia sẻ với bạn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>

            <div class="modal-body">
                <div id="sharedByMeContainer" class="row g-3">
                    <!-- Ghi chú chia sẻ sẽ được hiển thị ở đây -->
                </div>

                <div id="noSharedNotesMessage" class="text-muted mt-2" style="display: none;">
                    Không có ghi chú nào được chia sẻ.
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/share.js">

</script>