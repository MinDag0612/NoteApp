{# Modal yêu cầu mật khẩu ghi chú #}
<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
<div class="modal fade" id="passwordPromptModal" tabindex="-1" aria-labelledby="passwordPromptModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="passwordPromptModalLabel">Nhập mật khẩu ghi chú</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>

      <div class="modal-body">
        <input type="password" id="notePasswordInput" class="form-control" placeholder="Nhập mật khẩu để mở ghi chú">
        <div id="passwordError" class="text-danger mt-2" style="display: none;">
          ❌ Sai mật khẩu. Vui lòng thử lại.
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary" id="passwordSubmitBtn">Xác nhận</button>
      </div>

    </div>
  </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>